			</div>
		</div>
	</div>
</div>


<div class="row" style="display: block;">
	<div class="col-md-6 col-sm-6 ">
		<div class="x_panel">
			<div class="x_title">
				<h2>請假申請資訊</h2>
				<ul class="nav navbar-right panel_toolbox">
				</ul>
				<div class="clearfix"></div>
			</div>
			<div class="x_content">
				<div class="row">
					<div class="col-sm-12">
						<div class="card-box table-responsive">
							<table id="clinicDataTable" class="table table-striped table-bordered" style="width:100%">
								<thead>
									<tr>
										<th style="display:none">
											id
										</th>
										<th>
											員工名稱
										</th>
										<th>
											假別
										</th>
										<th>
											請假起日
										</th>
										<th>
											請假迄日
										</th>
										<th>
											代理人
										</th>
										<th>
											申請狀態
										</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>








@section Scripts {
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script>


		//套件
		toastr.options = {
			"closeButton": true,
			"showDuration": "300",
			"hideDuration": "500",
			"timeOut": "1000",
			"extendedTimeOut": "1000",
			"showEasing": "swing",
			"hideEasing": "linear",
			"showMethod": "fadeIn",
			"hideMethod": "fadeOut"
		}

		$('#empList').on('change', function () {

			const selectedValue = $(this).val();


			updateDataTable(empID = selectedValue)
		});

		let empID = 19;
		$(document).ready(function () {
			updateDataTable()
		});

		function updateDataTable() {
			$('#clinicDataTable').DataTable().destroy()
			$('#clinicDataTable').DataTable({
				ajax: {
					type: 'GET',
					url: "/Attend/Att/LeaveData/" + empID,
					dataSrc: function (json) { return json; }
				},
				columns: [
					{ data: "員工名稱" },
					{ data: "假別" },
					{ data: "請假起日" },
					{ data: "請假迄日" },
					{ data: "代理人" },
					{ data: "申請狀態" }
				],
				fixedHeader: {
					header: true
				},
				language: {
					url: "https://cdn.datatables.net/plug-ins/1.13.7/i18n/zh-HANT.json"
				}
			});
		}





	</script>






}



