@* @model ClinicWeb.Areas.Member.ViewModels.Membermetadata *@
@model ClinicWeb.Areas.Member.Models.MemberMemberList
<h4>修改會員資料</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="_MemberEditPartial" id="_MemberEditPartial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberId" />
            <div class="form-group">
                <label asp-for="MemberNumber" class="control-label"></label>
                <input asp-for="MemberNumber" class="form-control" />
                <span asp-validation-for="MemberNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>





            <div class="form-group row">
                <label class="control-label col-md-3 col-sm-3 ">性別</label>
                <div class="col-md-9 col-sm-9 ">
                    <select name="GenderString" class="form-control">
                        <option value="">---請選擇---</option>
                        <!option value='true'@if (Model.Gender == true)
                            @("selected")
> 男 </!option >
                        <!option value='false'@if (Model.Gender == false)
                            @("selected")
> 女 </!option >


                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BloodType" class="control-label"></label>
                <input asp-for="BloodType" class="form-control" />
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NationalId" class="control-label"></label>
                <input asp-for="NationalId" class="form-control" />
                <span asp-validation-for="NationalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactAddress" class="control-label"></label>
                <input asp-for="ContactAddress" class="form-control" />
                <span asp-validation-for="ContactAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IceName" class="control-label"></label>
                <input asp-for="IceName" class="form-control" />
                <span asp-validation-for="IceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IceNumber" class="control-label"></label>
                <input asp-for="IceNumber" class="form-control" />
                <span asp-validation-for="IceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemPassword" class="control-label"></label>
                <input asp-for="MemPassword" class="form-control" />
                <span asp-validation-for="MemPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemEmail" class="control-label"></label>
                <input asp-for="MemEmail" class="form-control" />
                <span asp-validation-for="MemEmail" class="text-danger"></span>
            </div>


            <!--啟用權限-->
            <div class="form-group row">
                <label class="control-label col-md-3 col-sm-3 ">啟用</label>
                <div class="col-md-9 col-sm-9 ">
                    <div class="col-md-9 col-sm-9 ">
                        <div class="">
                            <label>
                                <input name="VerificationString" id="vertificationformem" type="checkbox" class="js-switch" @if (Model.Verification == true)
                                    @("checked")

                                       data-switchery="true" style="display: none;">


                            </label>
                        </div>

                    </div>

                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
