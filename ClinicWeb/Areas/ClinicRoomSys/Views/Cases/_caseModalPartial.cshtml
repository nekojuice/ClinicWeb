<div class="modal fade" id="preModal" tabindex="-1" role="dialog" aria-labelledby="preModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">處方籤</h5>
                <button id="close" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-sm-12">
                    <form id="preadd">
                        <label for="bp">醫囑:</label>
                        <input type="text" class="form-control" id="adddispensing" name="dispensing">
                    </form>
                    <div class="container" style="margin-top:6px;margin-bottom:6px">
                        <h3>藥品清單</h3>
                    <select id="medicine" class="form-select"></select>
                    </div>
                    <table id="prescriptionListDataTable" class="table table-striped table-bordered hover-container" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th style="display:none">藥品ID</th>
                                <th>藥品名稱</th>
                                <th>開立天數</th>
                                <th>總量</th>
                            </tr>
                        </thead>
                    </table>
                    <br>
                    <button id="submitrd" class="btn btn-primary">送出</button>
                </div>
            </div>
        </div>
    </div>
</div>
