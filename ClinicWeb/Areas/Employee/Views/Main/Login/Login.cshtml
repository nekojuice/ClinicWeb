<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>


    <link href="~/msit155e/css/StaffLogin/StaffLogin.css" rel="stylesheet">

</head>
<body>

    <div class="login-container">
        <div class="logo">
            <img src="~/msit155e/images/LOGO.png" alt=" Logo">
        </div>
        <form asp-area="Employee" asp-controller="Main" asp-action="LoginForStaff" method="post">
            <div class="form-control">
                <label for="username">員工編號</label>
                <input type="text" asp-for="StaffNumber">
            </div>
            <div class="form-control">
                <label for="password">員工密碼</label>
                <input type="password" asp-for="EmpPassword">
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="text-danger" style="color:red">@ViewData["ErrorMessage"]</div>
            }


            <div class="buttons">
                <button type="reset" class="button reset">清除</button>
                <button type="submit" class="button login">登入</button>
            </div>
        </form>

    </div>

    <div class="demo-container">
        <button class="demo" type="button" onclick="fillDemo('1004', 'aeew234')">1004 行政 黃小勇 </button>
        <button class="demo" type="button" onclick="fillDemo('1010', 'aeew234')">1010 管理員 張秀娟 </button>
        <button class="demo" type="button" onclick="fillDemo('1019', 'aeew234')">1019 醫生 吳予成</button>
        <button class="demo" type="button" onclick="fillDemo('1021', 'aeew234')">1021 醫生 趙美琴</button>
    </div>

    <div style="bottom: 0;position: fixed;">
        <a href="@Url.Content("~/")">回demo連結首頁</a>
    </div>

    <script>
        function fillDemo(staffNumber, password) {
            document.getElementById('StaffNumber').value = staffNumber;
            document.getElementById('EmpPassword').value = password;
        }
    </script>
</body>
</html>
