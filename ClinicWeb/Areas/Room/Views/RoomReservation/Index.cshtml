@model IEnumerable<ClinicWeb.Areas.Room.Models.ShowAppointmentRoomSchedule>

<form method="get">
    <div class="form-group">
        <label for="RoomId">Room:</label>
        <input type="text" name="RoomId" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label for="memberId">Member:</label>
        <input type="text" name="memberId" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label for="nurseId">Nurse:</label>
        <input type="text" name="nurseId" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label for="doctorId">Doctor:</label>
        <input type="text" name="doctorId" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="date" name="startDate" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="date" name="endDate" class="form-control" value="" />
    </div>
    <button type="submit" class="btn btn-primary">新增</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>起</th>
            <th>迄</th>
            <th>醫生</th>
            <th>護士</th>
            <th>患者</th>
            <th>房名</th>

            <!-- Add other columns as needed -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
          
                <td>@item.DoctorId</td>
                <td>@item.NurseId</td>
                <td>@item.MemberName</td>
                <td>@item.RoomName</td>

                <!-- Add other columns as needed -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
