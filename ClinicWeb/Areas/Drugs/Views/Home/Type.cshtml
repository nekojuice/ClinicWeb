@section Scripts {
    <script>
        //dataTable 讀取資料 
        $(document).ready(function () {
            //alert("ready");
            $('#dtType').dataTable({

                ajax: {
                    type: 'GET',
                    url: (`/Drugs/drugsapi/TypeInfo`),
                    dataSrc: function (json) { return json; }
                },
                destroy: true,
                columns: [
                    { "data": "id", "visible": false },
                    { "data": "劑型代碼", "width": "20%" },
                    { "data": "劑型名稱", "width": "60%" },
                    {
                        "data": null, title: "操作功能", "width": "20%",
                        render: function (data, type, row) {
                            return '<button type="button" name="Editor" class="btn btn-warning btn-sm"> 編輯 </button>'
                        },
                    }
                ],
                fixedHeader: {
                    header: true
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/zh-HANT.json'
                }
            });
        })
        const TypeCode = document.getElementById('fTypeCode');
        const Type = document.getElementById('fType');
        //TypeCode.innerText = "123";
        $(document).on('click', 'button[name=Editor]', function () {
            var table = $('#dtType').DataTable();
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            console.log(data);
            console.log(data.劑型代碼);
            console.log(data.劑型名稱);
            console.log(typeof (data));
            console.log(JSON.stringify(data.劑型代碼));
            TypeCode.value = data.劑型代碼;
            Type.value = data.劑型名稱;
            //TypeCode.innerHTML = data.劑型代碼;
            // (JSON.stringify(data.劑型代碼)) = TypeCode.textContent;
            //TypeCode.textContent = JSON.stringify(data.劑型代碼)

        })
        
    </script>
}

