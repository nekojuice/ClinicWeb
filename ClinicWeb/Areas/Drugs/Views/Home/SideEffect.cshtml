@section Scripts {


    <script>
        $(document).ready(function () {
            //alert("SEList");
            $('#dtSE').dataTable({

                ajax: {
                    type: 'GET',
                    url: (`/Drugs/DrugsApi/SideEffectInfo`),
                    dataSrc: function (json) { return json; }
                },
                destroy: true,
                columns: [
                    { "data": "id", "visible": false },
                    { "data": "副作用代碼", "width": "20%" },
                    { "data": "副作用名稱", "width": "60%" },
                    {
                        "data": null, title: "操作功能", "width": "20%",
                        render: function (data, type, row) {
                            return '<button type="button" name="Editor" class="btn btn-warning btn-sm"> 編輯 </button>'
                        },
                    }
                ],
                fixedHeader: {
                    header: true
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/zh-HANT.json'
                }
            });
        })
        const SECode = document.getElementById('fSideEffectCode');
        const SE = document.getElementById('fSideEffect');
        $(document).on('click', 'button[name=Editor]', function () {
            var table = $('#dtSE').DataTable();
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            SECode.value = data.副作用代碼;
            SE.value = data.副作用名稱;
        })
    </script>
}

