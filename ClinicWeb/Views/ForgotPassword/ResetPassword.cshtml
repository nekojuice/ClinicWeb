<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>


    <link href="~/msit155e/css/ForgotPassword/ForgotPassword.css" rel="stylesheet">

</head>
<body>

    <div class="login-container">
        <div class="logo">
            <span>重設密碼 </span>
        </div>
        <form asp-area="Employee" asp-controller="Main" asp-action="LoginForStaff" method="post">
            <div class="form-controlVIC">
                <label for="password">新密碼</label>
                <input type="text" name="password">
            </div>
            <div class="form-controlVIC">
                <label for="confirmPassword">確認密碼</label>
                <input type="password" name="confirmPassword">
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="text-danger" style="color:red">@ViewData["ErrorMessage"]</div>
            }


            <div class="buttons">

                <button type="submit" class="button sendemail">送出</button>
            </div>
        </form>

    </div>



    <script>
        function fillDemo(staffNumber, password) {
            document.getElementById('StaffNumber').value = staffNumber;
            document.getElementById('EmpPassword').value = password;
        }
    </script>
</body>
</html>