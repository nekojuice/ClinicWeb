    <script src="~/msit155e/js/MemberProfile/validate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/msit155e/js/MemberProfile/main.js"></script>
    <script>
        $(document).ready(function () {
            // 檢查 TempData 中的 SuccessMessage
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                // 顯示 SweetAlert 成功消息
                Swal.fire({
                    icon: 'success',
                    title: '成功！',
                    text: successMessage
                });
            }
        });
    </script>

 


}
