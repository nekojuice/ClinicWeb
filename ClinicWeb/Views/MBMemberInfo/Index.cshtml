    <script>
        let $memberInfoForm
        let _memberInfoForm
       
        $(document).ready(function () {
            // 檢查 TempData 中的 SuccessMessage
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                // 顯示 SweetAlert 成功消息
                Swal.fire({
                    icon: 'success',
                    title: '成功！',
                    text: successMessage
                });
            }
        });

        document.getElementById("memberInfo").addEventListener("submit", async function (event) {
            event.preventDefault();

            var formElement = document.getElementById('memberInfo');
            var formData = new FormData(formElement);

            try {
                const response = await fetch(`@Url.Content("~/MBMemberInfo/Edit")`, {
                    method: "POST",
                    body: formData,
                });

                if (!response.ok) throw new Error('Network response was not ok.');

                const result = await response.json();
                console.log(result)
                // 假設 result 是你從後端獲得的更新後的會員資料 JSON 對象
                for (const key in result) {
                    if (result.hasOwnProperty(key)) {
                        const element = document.getElementsByName(key)[0]; // 根據名稱獲取對應的表單元素
                        if (element) {
                            element.value = result[key]; // 設定表單元素的值
                        }
                    }
                }

              
                Swal.fire({
                    title: '成功',
                    text: '修改資料成功',
                    icon: 'success',
                });
            } catch (error) {
                Swal.fire({
                    title: '錯誤',
                    text: '修改資料失敗，請稍後在試',
                    icon: 'error',
                });
            }
        });



      
        

        // 上傳
        document.getElementById('uploadButton').addEventListener('click', function () {
            var fileInput = document.getElementById('ImageUpload');
            var formData = new FormData();
            formData.append('file', fileInput.files[0]);

            fetch('@Url.Action("UploadImage", "YourControllerName")', { // 
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.imageUrl) {
                        //  URL 
                        document.getElementById('imagePreview').innerHTML = `<img src="${data.imageUrl}" alt="Uploaded Image" style="max-width: 100%; height: auto;">`;
                    } else {
                        // 处理错误
                        console.error('Error:', data);
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        });


        //圖片預覽 
        document.querySelector('.cardSelector').addEventListener('click', function () {
            document.getElementById('ImageUpload').click();
        });

        document.getElementById('ImageUpload').addEventListener('change', function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                var previewImage = document.getElementById('PreviewImage');
                previewImage.src = e.target.result;
                previewImage.style.display = 'block'; // 顯示預覽圖 

   
                // document.querySelector('.fa-upload').style.display = 'none'; // 未來可能會放一個上船的圖示 
                document.querySelector('.card-title').style.display = 'none'; // 用來隱藏標題 
                document.querySelector('.card-text').style.display = 'none'; // 藏文字提示 
            };
            reader.readAsDataURL(this.files[0]);
        });

        //用戶如果要關掉視窗 然後還有圖片的提醒

        function deleteForm() {
            $('#uploadModal').modal('hide') //關掉小窗
            $('#uploadModal').html('') //刪除顯示div
        }
    </script>




