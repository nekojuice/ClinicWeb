<div class="row d-flex align-items-start">

    <div class="col-xl-3">
        <div class="card">
            <div class="card">
                <img src="~/images/person_4.jpg" class="card-img-top" alt="..." style="width: 60%;border-radius: 50%;margin: 0 auto;margin-top:2em;box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
                <div class="card-body">
                    <h5 class="card-title">會員姓名</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
            <div class="card-body profile-card pt-4 d-flex flex-column">
                <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <button class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">會員資料檢視</button>
                    <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">修改資料</button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-9">
        <div class="card">
            <div class="card-body pt-3">
            </div>
            <div class="card-body pt-3">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                       <!--會員資料檢視-->
                        <partial name="_MemberProfilePartial">
                    </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                        <!--會員資料修改-->
                    
                        <div class="container">
                            <h1>修改資料</h1>
                            <form id="memberInfo">
                                <div class="row mb-3">
                                    <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <img src="assets/img/profile-img.jpg" alt="Profile">
                                        <div class="pt-2">
                                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                                            <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="Name" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Name" type="text" class="form-control">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="NationalId" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="NationalId" type="text" class="form-control">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="MemEmail" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="MemEmail" type="text" class="form-control">
                                    </div>
                                </div>
                                <!-- 聯絡電話 -->
                                <div class="row mb-3">
                                    <label asp-for="Phone" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Phone" type="text" class="form-control">
                                    </div>
                                </div>
                                <!--性別-->
                                <div class="row mb-3">
                                    <label asp-for="Gender" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <select asp-for="Gender" class="form-control">
                                            <!option
                                            > 男 </!option >
                                            <!option
                                            > 女 </!option >
                                        </select>
                                    </div>
                                </div>
                                <!-- 血型 -->
                                <div class="row mb-3">
                                    <label asp-for="BloodType" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <select class="form-control" asp-for="BloodType">

                                            <option>A</option>
                                            <option>B</option>
                                            <option>O</option>
                                            <option>AB</option>
                                        </select>
                                    </div>
                                </div>
                                <!--戶籍地址-->
                                <div class="row mb-3">
                                    <label asp-for="Address" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Address" type="text" class="form-control">
                                    </div>
                                </div>
                                <!--聯絡地址-->
                                <div class="row mb-3">
                                    <label asp-for="ContactAddress" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="ContactAddress" type="text" class="form-control">
                                    </div>
                                </div>
                                <!--生日-->
                                <div class="row mb-3">
                                    <label asp-for="BirthDate" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">

                                        <input asp-for="BirthDate" class="date-picker form-control" type="date">
                                    </div>
                                </div>
                                <!--緊急聯絡人-->
                                <div class="row mb-3">
                                    <label asp-for="IceName" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="IceName" type="text" class="form-control">
                                    </div>
                                </div>
                                <!--緊急聯絡人電話-->
                                <div class="row mb-3">
                                    <label asp-for="IceNumber" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="IceNumber" type="text" class="form-control">
                                    </div>
                                </div>
                                <!--會員密碼-->
                                <div class="row mb-3">
                                    <label asp-for="MemPassword" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="MemPassword" type="text" class="form-control">
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">保存變更</button>
                                </div>
                            </form><!-- End Profile Edit Form -->
                        </div>
                    </div>
                   
                </div>

                <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            </div>
        </div>
    </div>
</div>



