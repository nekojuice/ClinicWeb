@model MemberMemberList

<link href="~/msit155e/css/MemberLogin/MemberLogin.css" rel="stylesheet">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="...">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="..." crossorigin="anonymous"></script>
<!------ Include the above in your HEAD tag ---------->
<!--輪播區-->
<div class="container">
    <div class="row">
        <!-- 輪播圖 -->
        <div class="col-md-6">
            <!-- 輪播圖 -->
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/msit155e/images/MemLogin/01Edu.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/msit155e/images/MemLogin/02Edu.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/msit155e/images/MemLogin/03Edu.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!-- 右側表單區域 -->
        <div class="col-md-6">

            <div class="panel panel-login" style="margin:100px">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6 ">
                            <a href="#" class="active" id="login-form-link">註冊</a>
                        </div>

                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" asp-controller="ClientPage" asp-action="LoginForClient" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    <input type="text" asp-for="MemEmail" tabindex="1" class="form-control" placeholder="請輸入信箱" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="MemPassword" tabindex="2" class="form-control" placeholder="請輸入密碼">
                                </div>

                                @if (ViewData["ErrorMessage"] != null)
                                {
                                    <div class="text-danger" style="color:red">@ViewData["ErrorMessage"]</div>
                                }

                                <a asp-controller="LoginGoogletest" asp-action="Logingoogle">
                                    <img src="~/msit155e/images/MemLogin/Fa-Team-Fontawesome-Brands-FontAwesome-Brands-Google-Plus.512.png" alt="Google 登入" style="width: 24px; height: 24px;" />
                                </a>


                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <button type="submit" class="login-content_submit">登入</button>
                                            </div>

                                            <div class="text-center">
                                                <a href="https://phpoll.com/recover" tabindex="5" class="forgot-password">忘記密碼?</a>
                                            </div>
                                            <div class="text-center">
                                                <a asp-controller="ClientPage" asp-action="Login" class="forgot-password">已經是會員? 前往登入</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script></script>
 