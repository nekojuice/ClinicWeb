@model MemberMemberList

<link href="~/msit155e/css/MemberLogin/MemberLogin.css" rel="stylesheet">



<!------ Include the above in your HEAD tag ---------->

<!--輪播區-->
<div class="container">
    <div class="row">
        <!-- 輪播圖 -->
        <div class="col-md-6">
            <!-- 輪播圖 -->
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/msit155e/images/MemLogin/01Edu.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/msit155e/images/MemLogin/02Edu.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/msit155e/images/MemLogin/03Edu.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

 <!-- 右側表單區域 -->
        <div class="col-md-6">

            <div class="panel panel-login" style="margin:10px;block; background-color:white">
                <div class="panel-heading" >
                    <div class="row">
                        <div class="col-xs-6 " style="margin:10px">
                            <a href="#" class="active" id="login-form-link">登入</a>
                        </div>
                  
                    </div>
                    <hr>
                </div>
                <div class="panel-body" style="margin:20px">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" asp-controller="ClientPage" asp-action="LoginForClient" method="post" role="form" style="display: ">
                                <div class="form-group mb-3">
                                    <input type="text" asp-for="MemEmail" tabindex="1" class="form-control" placeholder="請輸入信箱" value="">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="password" asp-for="MemPassword" tabindex="2" class="form-control" placeholder="請輸入密碼">
                                </div>

                                @if (ViewData["ErrorMessage"] != null)
                                {
                                    <div class="text-danger" style="color:red">@ViewData["ErrorMessage"]</div>
                                }
                                @if (ViewData["RegisterPrompt"] != null)
                                {
                                    <div class="alert alert-warning" role="alert">
                                        @TempData["RegisterPrompt"]
                                    </div>
                                }


                                <a asp-controller="LoginGoogletest" asp-action="Logingoogle">
                                    <img src="~/msit155e/images/MemLogin/Fa-Team-Fontawesome-Brands-FontAwesome-Brands-Google-Plus.512.png" alt="Google 登入" style="width: 24px; height: 24px;" />
                                </a>

                               
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <button type="submit" class="login-content_submit">登入</button>
                                            </div>
                                          
                                            <div class="text-center">
                                                <a href="https://phpoll.com/recover" tabindex="5" class="forgot-password">忘記密碼?</a>
                                            </div>
                                            <div class="text-center">
                                                <a asp-controller="ClientPage" asp-action="Register" class="forgot-password">還不是會員? 前往註冊</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                          


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    @if (TempData["Msg"] != null)
    {
        <script type="text/javascript">
            alert("@TempData["Msg"]");
        </script>
    }
    @if (ViewData["RegisterPrompt"] != null)
    {
        <script type="text/javascript">
            alert("@TempData["RegisterPrompt"]");
        </script>
    }


}

