        //電子簽章
        
        
        
        let buttonClicked = false;

        document.getElementById("openModalBtn").addEventListener("click", function () {
            if (!buttonClicked) {
                connection.invoke("SendButtonClick").catch(function (err) {
                    return console.error(err.toString());
