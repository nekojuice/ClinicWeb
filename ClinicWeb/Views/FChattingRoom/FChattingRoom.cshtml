        //上傳圖片檔案
        $("#fileInput").change(function (event) {
            var file = event.target.files[0]; // 獲取所選的檔案
            var maxSize = 30000; // 50KB 的大小限制，1KB = 1024 bytes

            if (file) {
                if (file.size > maxSize) {
                    Swal.fire("檔案大小超過限制");
                    // 清空檔案輸入欄位
                    $("#fileInput").val('');
                    return;
                }

